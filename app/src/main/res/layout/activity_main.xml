<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/kenya"
            android:id="@+id/imgkenya" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:contentDescription="@string/app_name"/>
    <EditText
            android:layout_width="396dp"
            android:layout_height="115dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtkenya" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/imgkenya" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="Mt kenya is the highest mountain in Kenya." android:hint="@string/app_name"
            android:text="@string/app_name" android:importantForAutofill="no" tools:targetApi="o"
    />
    <Button
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnnext" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/edtkenya" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="220dp" android:layout_marginStart="220dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.726" tools:text="Next"/>

</android.support.constraint.ConstraintLayout>